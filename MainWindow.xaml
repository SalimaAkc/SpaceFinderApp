<Window x:Class="SpacefinderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:SpacefinderApp.Views"
        Title="SpaceFinder" WindowStartupLocation="CenterScreen">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Booking">
                <MenuItem Header="New Booking" Click="ShowBookingWindow_Click"/>
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock x:Name="statusText"/>
        </StatusBar>

        <views:HomeView x:Name="mainContent"/>
        <!-- Optional content area -->
    </DockPanel>
</Window>