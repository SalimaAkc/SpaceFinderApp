<Window x:Class="SpacefinderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Spacefinder - Campus Management System"
        WindowState="Maximized"
        Background="#F5F7FB"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style TargetType="Button" x:Key="FeatureButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#2D3250"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2D3250"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D3250" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="/Assets/logo.png" Width="300" Stretch="Uniform"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Quick Actions -->
            <UniformGrid Columns="2" Rows="2" Margin="0 0 20 0">
                <Button Style="{StaticResource FeatureButton}" Content="Room Booking" Tag="🏢">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Tag, RelativeSource={RelativeSource AncestorType=Button}}"
                                           FontSize="40" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Content, RelativeSource={RelativeSource AncestorType=Button}}"
                                           Margin="0 10 0 0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Button Style="{StaticResource FeatureButton}" Content="Class Schedule" Tag="📅"/>
                <Button Style="{StaticResource FeatureButton}" Content="Campus Map" Tag="📍"/>
                <Button Style="{StaticResource FeatureButton}" Content="Resource Finder" Tag="🔍"/>
            </UniformGrid>

            <!-- Announcements Panel -->
            <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="Latest Announcements"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0 0 0 20"/>

                    <!-- Announcement Items -->
                    <StackPanel>
                        <Border Padding="15" Background="#F8F9FC" CornerRadius="8" Margin="0 0 0 10">
                            <TextBlock Text="New study spaces added in Library Wing B"
                                       Foreground="#6B7280"/>
                        </Border>
                        <Border Padding="15" Background="#F8F9FC" CornerRadius="8" Margin="0 0 0 10">
                            <TextBlock Text="Maintenance scheduled for Tech Labs this Friday"
                                       Foreground="#6B7280"/>
                        </Border>
                    </StackPanel>

                    <!-- Quick Stats -->
                    <StackPanel Margin="0 20 0 0">
                        <TextBlock Text="Quick Stats"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0 0 0 10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Available Rooms" Foreground="#6B7280"/>
                                <TextBlock Text="42" FontSize="24" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Active Bookings" Foreground="#6B7280"/>
                                <TextBlock Text="18" FontSize="24" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>