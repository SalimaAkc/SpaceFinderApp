<Window x:Class="SpacefinderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Spacefinder - Campus Selection"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FB">

    <Window.Resources>
        <Style x:Key="CampusButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2D3250"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="#4B5563"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            RecognizesAccessKey="True"/>
                            <!-- Add this line -->
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A1F38"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Which Campus?"
                   FontSize="50"
                   FontWeight="Bold"
                   Foreground="#2D3250"
                   HorizontalAlignment="Center"/>

        <!-- Campus Selection Grid -->
        <UniformGrid Grid.Row="1"
                     Columns="2"
                     Rows="2"
                     Margin="40,40,40,40">

            <!-- Campus De Vest -->
            <Button Content="Campus De Vest"
                    Style="{StaticResource CampusButtonStyle}"
                    Command="{Binding SelectCampusCommand}"
                    CommandParameter="DeVest"/>

            <!-- Campus Kruidtuin -->
            <Button Content="Campus Kruidtuin"
                    Style="{StaticResource CampusButtonStyle}"
                    Command="{Binding SelectCampusCommand}"
                    CommandParameter="Kruidtuin"/>

            <!-- Campus De Ham -->
            <Button Content="Campus De Ham"
                    Style="{StaticResource CampusButtonStyle}"
                    Command="{Binding SelectCampusCommand}"
                    CommandParameter="DeHam"/>

            <!-- Campus Lucas Faydherbe -->
            <Button Content="Campus Lucas Faydherbe"
                    Style="{StaticResource CampusButtonStyle}"
                    Command="{Binding SelectCampusCommand}"
                    CommandParameter="LucasFaydherbe"/>
        </UniformGrid>
    </Grid>
</Window>